{
  "manifest_version": 3,
  "name": "Brick Layers",
  "version": "0.0.1",
  "description": "A fantasy basketball assistant for drafts, trades, and matchups.",

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "alarms",
    "notifications"
  ],

  "host_permissions": [
    "*://fantasy.espn.com/*",
    "*://*.espn.com/*",
    "*://basketball.fantasysports.yahoo.com/*",
    "*://sports.yahoo.com/*",
    "*://sleeper.app/*",
    "*://*.sleeper.com/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ]
}

